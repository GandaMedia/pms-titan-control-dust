{
  "name": "pms-titan-control",
  "author": "Charlie Langridge - Penguin Media Solutions",
  "description": "Control of titan desks from any machine on network",
  "private": true,
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "cross-env MODE=test npm run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "pretypecheck": "npm run buildEnvTypes",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 91"
  ],
  "simple-git-hooks": {},
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "electron-devtools-installer": "^3.2.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.2",
    "spectron": "^15.0.0",
    "tailwindcss": "^2.1.4",

    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@vitejs/plugin-vue": "4.0.0",
    "@vue/test-utils": "2.2.7",
    "cross-env": "7.0.3",
    "electron": "22.0.3",
    "electron-builder": "23.6.0",
    "eslint": "8.32.0",
    "eslint-plugin-vue": "9.9.0",
    "happy-dom": "8.1.5",
    "nano-staged": "0.8.0",
    "playwright": "1.29.2",
    "simple-git-hooks": "2.8.1",
    "typescript": "4.9.4",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.0.4",
    "vitest": "0.28.1",
    "vue-tsc": "1.0.24"
  },
  "dependencies": {
    "@heroicons/vue": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@typescript-eslint/parser": "^4.26.1",
    "axios": "^0.21.1",
    "vue-router": "^4.0.8",

    "electron-updater": "5.3.0",
    "vue": "3.2.45"
  }
}
